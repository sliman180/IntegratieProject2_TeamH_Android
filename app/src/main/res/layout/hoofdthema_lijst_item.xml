<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#FFFFFF">

    <!-- icon -->
    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="26.5dp"
        android:contentDescription="@null"
        />

    <!-- title -->
    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/item_icon"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="New Text"

        />

    <TextView
        android:id="@+id/hoofdthema_beschrijving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_toEndOf="@+id/item_icon"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="New Text"


        />

    <TextView
        android:id="@+id/hoofdthema_organisatie_beschrijving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hoofdthema_beschrijving"
        android:layout_toEndOf="@+id/item_icon"
        android:layout_marginEnd="8dp"
        android:text="New Text"
        android:textSize="12sp"
        android:textStyle="bold"

        />

    <View
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/frontLine" />

    <View
        android:layout_width="1dp"
        android:layout_toStartOf="@+id/click_icon"
        android:layout_height="match_parent"
        android:background="@color/md_grey_500"
        android:id="@+id/backLine" />

    <!-- icon -->
    <ImageView
        android:id="@+id/click_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="26.5dp"
        android:contentDescription="@null"
        />



</RelativeLayout>