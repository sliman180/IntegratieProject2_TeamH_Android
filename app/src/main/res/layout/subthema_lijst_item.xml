<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="#FFFFFF">

    <!-- counter -->
    <TextView
        android:id="@+id/item_counter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <!-- title -->
    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/item_counter"
        android:text="New text"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/subthema_beschrijving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_toEndOf="@+id/item_counter"
        android:text="New text"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/subthema_organisatie_beschrijving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subthema_beschrijving"
        android:layout_toEndOf="@+id/item_counter"
        android:text="New text"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/subthema_hoofdthema_beschrijving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subthema_organisatie_beschrijving"
        android:layout_toEndOf="@+id/item_counter"
        android:text="New text"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <View
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/frontLine" />


</RelativeLayout>