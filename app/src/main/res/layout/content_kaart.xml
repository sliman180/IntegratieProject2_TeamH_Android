<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="be.kdg.kandoe.kandoeandroid.kaart.KaartActivity"
    tools:showIn="@layout/activity_kaart">
    <TextView
        android:id="@+id/spelkaart_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:listSeparatorTextViewStyle"
        android:text="@string/spelkaart_gegevens"
        android:layout_marginBottom="15dp"
        />

    <RelativeLayout
        android:background="@drawable/chat_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >



        <TextView
            android:id="@+id/spelkaart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary">

        </TextView>
        <TextView
            android:id="@+id/spelkaart_kaart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spelkaart"
            android:text="New Text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary">

        </TextView>
        <TextView
            android:id="@+id/spelkaart_gebruiker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spelkaart_kaart"
            android:text="New Text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary">

        </TextView>
        <TextView
            android:id="@+id/spelkaart_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spelkaart_gebruiker"
            android:text="New Text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary">

        </TextView>
    </RelativeLayout>


</LinearLayout>
