<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="#FFFFFF"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backgroundLayout"
        android:background="@drawable/background_list_item">

        <!-- icon -->
        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@null"
            android:layout_centerInParent="true"
            />

        <!-- title -->
        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_counter"
            android:layout_alignBaseline="@+id/item_counter"
            android:textSize="14sp"
            android:text="New Text"
            android:textStyle="bold"
            />

        <!-- organisator -->
        <TextView
            android:id="@+id/item_organisator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:layout_toEndOf="@+id/item_counter"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:text="New Text"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/item_subthema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_organisator"
            android:layout_toEndOf="@+id/item_counter"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_datum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_subthema"
            android:layout_toEndOf="@+id/item_counter"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <!-- counter -->
        <TextView
            android:id="@+id/item_counter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"

            />

        <View
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:id="@+id/frontLine" />

    </RelativeLayout>


</RelativeLayout>